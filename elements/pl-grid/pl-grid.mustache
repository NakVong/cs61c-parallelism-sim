<div class="d-flex flex-wrap list-group">
  <div class="card-header pl-grid-header list-group-item-primary">
    <span class="me-2">Drag from here:</span>
    <button type="button" style="vertical-align:middle;" class="btn btn-light btn-sm" data-bs-toggle="popover" data-bs-html="true" title="Grid" data-bs-content="Random text">
      <i class="fa fa-question-circle" aria-hidden="true"></i>
    </button>
  </div>
  <div class="grid-stack source-grid" id="grid1"></div>
  
  <div class="card-header pl-grid-header list-group-item-primary">
    <span class="me-2">Construct your solution here</span>
  </div>
  <div class="grid-stack dest-grid" id="grid2"></div>
</div>

<div class="pl-grid">
  {{#grids}}
  <div class="{{grid_type}}" data-grid-type="{{grid_type}}">
    {{#elements}}
    <div class="pl-element"
         data-w="{{w}}"
         data-h="{{h}}"
         data-x="{{x}}"
         data-y="{{y}}"
         data-color="{{color}}">
      {{content}}
    </div>
    {{/elements}}
  </div>
  {{/grids}}
</div>
